<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        a { text-decoration: none; }
        header {
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff !important;
        }
        footer {
            background-color: #343a40;
            font-size: 0.9rem;
            color: white;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        .btn {
            margin: 0 5px;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
        }
    </style>
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <!-- Header Navigation -->
    <header class="p-3 bg-dark text-light">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="{{ path('public_vehicules_index') }}">On The Road</a>
            <nav>
                {% if app.user %}
                    <a class="btn btn-outline-light" href="{{ path('public_vehicules_index') }}">Home</a>
                    <a class="btn btn-outline-light" href="{{ path('public_vehicules_index') }}">Favoris</a>

                    
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-outline-light" href="{{ path('app_vehicule_index') }}">Vehicule</a>
                        <a class="btn btn-outline-light" href="{{ path('app_reservation_index') }}">Reservation</a>
                        <a class="btn btn-outline-light" href="{{ path('app_user_index') }}">Utilisateur</a>
                        <a class="btn btn-outline-light" href="{{ path('app_commentaire_index') }}">Commentaire</a>
                        <a class="btn btn-outline-light" href="{{ path('app_logout') }}">Logout</a>

                    {% endif %}
                    
                    <a class="btn btn-danger" href="{{ path('app_vehicule_index') }}">Logout</a>
                {% else %}
                    <a class="btn btn-outline-success" href="{{ path('app_login') }}">Connexion</a>
                    <a class="btn btn-outline-primary" href="{{ path('app_register') }}">S'inscrire</a>
                {% endif %}
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container my-5">
        {% block body %}
        {% endblock %}
    </main>

    <!-- Footer -->
    <footer class="p-3 text-center">
        <div>Institut - IPSSI</div>
        <div>&copy; 2025 - All rights reserved.</div>
    </footer>

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0YOIWmVVqpXV5LU7JkAdVn88fR7D5SY7kCbd5KfvvYePbniV" crossorigin="anonymous"></script>
    {% endblock %}
</body>
</html>