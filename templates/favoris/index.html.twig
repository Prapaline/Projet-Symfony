{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Vos Véhicules Favoris</h1>

        {% if favoris is empty %}
            <p>Vous n'avez pas encore ajouté de véhicule aux favoris.</p>
        {% else %}
            <ul class="list-group">
                {% for vehicule in favoris %}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>{{ vehicule.marque }}</strong> - {{ vehicule.modele }}
                                <p>{{ vehicule.description }}</p>
                            </div>
                            <div>
                                <a href="{{ path('vehicule_show', {'id': vehicule.id}) }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}